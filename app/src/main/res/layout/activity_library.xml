<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.mcphil.avastus.LibraryActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:src="@mipmap/saasd"
        app:layout_constraintBottom_toTopOf="@+id/LibTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LibTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="17dp"
        android:text="Beta Testing"
        app:layout_constraintBottom_toTopOf="@+id/btnLibDocu"
        app:layout_constraintStart_toStartOf="@+id/btnLibDocu"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btnLibquizzes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:text="Quizzes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLibDocu" />

    <Button
        android:id="@+id/btnLibDocu"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Documents"
        app:layout_constraintBottom_toTopOf="@+id/btnLibquizzes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LibTV" />

</android.support.constraint.ConstraintLayout>
